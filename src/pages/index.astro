---
import Layout from '../layouts/Layout.astro';
import AppCard from '../components/AppCard.astro';
import apps from '../data/apps.json';
---

<Layout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-badge">ðŸ”¥ App Studio</div>
      <h1 class="hero-title">
        Freshly coded<br />
        <span class="gradient-text">mobile experiences.</span>
      </h1>
      <p class="hero-subtitle">
        We craft beautiful, high-performance iOS and Android apps 
        that users love. From concept to App Storeâ€”baked to perfection.
      </p>
      <div class="hero-cta">
        <a href="#apps" class="btn-primary">
          <span>Explore Our Apps</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 5v14M5 12l7 7 7-7"/>
          </svg>
        </a>
      </div>
    </div>
    <div class="hero-visual">
      <div class="floating-emojis">
        <span class="emoji emoji-1">ðŸ“±</span>
        <span class="emoji emoji-2">ðŸš€</span>
        <span class="emoji emoji-3">âœ¨</span>
        <span class="emoji emoji-4">ðŸŽ®</span>
        <span class="emoji emoji-5">ðŸ’¡</span>
      </div>
    </div>
  </section>

  <!-- Apps Grid Section -->
  <section id="apps" class="apps-section">
    <div class="section-header">
      <span class="section-label">Our Creations</span>
      <h2 class="section-title">Featured Apps</h2>
      <p class="section-subtitle">
        Every app we build is crafted with care, performance, and user delight in mind.
      </p>
    </div>
    
    <div class="apps-grid">
      {apps.map((app) => (
        <AppCard
          slug={app.slug}
          name={app.name}
          tagline={app.tagline}
          status={app.status as 'live' | 'dev' | 'concept'}
          appStoreUrl={app.appStoreUrl}
          icon={app.icon}
        />
      ))}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>Have an app idea?</h2>
      <p>Let's bring it to life. We're always cooking up something new.</p>
      <a href="/contact" class="btn-secondary">Get in Touch</a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(245, 158, 11, 0.1);
    border: 1px solid rgba(245, 158, 11, 0.3);
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: 2rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-accent) 0%, #FBBF24 50%, #FDE68A 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .hero-cta {
    animation: fadeInUp 0.6s ease-out 0.3s both;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--color-accent), #FBBF24);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(245, 158, 11, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(245, 158, 11, 0.35);
  }

  .btn-primary svg {
    animation: bounce 2s ease-in-out infinite;
  }

  .hero-visual {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .floating-emojis {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .emoji {
    position: absolute;
    font-size: 2.5rem;
    opacity: 0.4;
    animation: float 6s ease-in-out infinite;
  }

  .emoji-1 { top: 15%; left: 10%; animation-delay: 0s; }
  .emoji-2 { top: 25%; right: 15%; animation-delay: 1s; }
  .emoji-3 { top: 60%; left: 8%; animation-delay: 2s; }
  .emoji-4 { bottom: 20%; right: 10%; animation-delay: 1.5s; }
  .emoji-5 { top: 40%; right: 5%; animation-delay: 0.5s; }

  /* Apps Section */
  .apps-section {
    padding: 6rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: rgba(245, 158, 11, 0.1);
    border-radius: 20px;
    color: var(--color-accent);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    margin: 0 0 1rem;
  }

  .section-subtitle {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  /* CTA Section */
  .cta-section {
    padding: 6rem 2rem;
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
    padding: 4rem;
    background: linear-gradient(145deg, rgba(26, 26, 26, 0.6), rgba(13, 13, 13, 0.8));
    border: 1px solid rgba(245, 158, 11, 0.2);
    border-radius: 24px;
  }

  .cta-content h2 {
    font-size: 2rem;
    margin: 0 0 1rem;
  }

  .cta-content p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin: 0 0 2rem;
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 0.9rem 2rem;
    background: transparent;
    border: 2px solid var(--color-accent);
    color: var(--color-accent);
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: var(--color-accent);
    color: white;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(4px); }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 1.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .emoji {
      font-size: 1.8rem;
    }

    .apps-section {
      padding: 4rem 1.5rem;
    }

    .cta-content {
      padding: 2.5rem;
    }
  }
</style>
