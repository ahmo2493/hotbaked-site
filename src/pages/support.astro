---
import Layout from '../layouts/Layout.astro';
import apps from '../data/apps.json';

// Get app from URL query parameter
const appParam = Astro.url.searchParams.get('app');
const selectedApp = apps.find(a => a.name === appParam);
const defaultSubject = selectedApp ? `Support: ${selectedApp.name}` : 'Support Request';
---

<Layout 
  title="Support | Hot Baked Apps"
  description="Get help with Hot Baked Apps products. Contact our support team for assistance."
  canonicalPath="/support"
>
  <section class="support-page">
    <div class="support-container">
      <header class="support-header">
        <span class="support-icon">üí¨</span>
        <h1>How can we help?</h1>
        <p class="support-subtitle">
          We're here to assist you with any questions or issues you might have.
        </p>
      </header>

      <div class="support-content">
        <div class="contact-card">
          <div class="card-icon">üìß</div>
          <h2>Email Support</h2>
          <p>Send us an email and we'll get back to you as soon as possible.</p>
          <a 
            href={`mailto:support@hotbakedapps.com?subject=${encodeURIComponent(defaultSubject)}`} 
            class="contact-btn"
            id="email-link"
          >
            <span>support@hotbakedapps.com</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        </div>

        <div class="contact-card">
          <div class="card-icon">üêõ</div>
          <h2>Report a Bug</h2>
          <p>Found something not working right? Let us know so we can fix it.</p>
          <a 
            href={`mailto:support@hotbakedapps.com?subject=${encodeURIComponent(selectedApp ? `Bug Report: ${selectedApp.name}` : 'Bug Report')}`}
            class="contact-btn"
          >
            <span>support@hotbakedapps.com</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        </div>

        <div class="contact-card">
          <div class="card-icon">üí°</div>
          <h2>Feature Request</h2>
          <p>Have an idea to make our apps better? We'd love to hear it!</p>
          <a 
            href={`mailto:support@hotbakedapps.com?subject=${encodeURIComponent(selectedApp ? `Feature Request: ${selectedApp.name}` : 'Feature Request')}`}
            class="contact-btn"
          >
            <span>support@hotbakedapps.com</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        </div>
      </div>

      {selectedApp && (
        <div class="app-context">
          <p>
            <span class="app-context-icon">{selectedApp.icon}</span>
            You're contacting us about <strong>{selectedApp.name}</strong>
          </p>
        </div>
      )}

      <div class="faq-section">
        <h2>Frequently Asked Questions</h2>
        
        <div class="faq-list">
          <details class="faq-item">
            <summary>How do I reset my app data?</summary>
            <p>
              All our apps store data locally on your device. To reset, you can delete 
              and reinstall the app, or check the app's settings for a "Reset Data" option.
            </p>
          </details>

          <details class="faq-item">
            <summary>Is my data backed up?</summary>
            <p>
              Our apps don't collect or store your data on our servers. Any data created 
              in the app stays on your device. We recommend using your device's built-in 
              backup features to protect your data.
            </p>
          </details>

          <details class="faq-item">
            <summary>How do I request a refund?</summary>
            <p>
              App purchases are handled through the App Store or Google Play. Please contact 
              Apple or Google directly for refund requests as we don't process payments directly.
            </p>
          </details>

          <details class="faq-item">
            <summary>When will new features be added?</summary>
            <p>
              We're constantly working to improve our apps! Follow us for updates, or sign up 
              for our newsletter to be the first to know about new features and releases.
            </p>
          </details>
        </div>
      </div>

      <footer class="support-footer">
        <a href="/" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          <span>Back to Home</span>
        </a>
      </footer>
    </div>
  </section>
</Layout>

<script>
  // Client-side: Update mailto links if URL has ?app= parameter
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const appName = urlParams.get('app');
    
    if (appName) {
      const emailLink = document.getElementById('email-link');
      if (emailLink) {
        const subject = encodeURIComponent(`Support: ${appName}`);
        emailLink.setAttribute('href', `mailto:support@hotbakedapps.com?subject=${subject}`);
      }
    }
  });
</script>

<style>
  .support-page {
    padding: 4rem 2rem;
    min-height: calc(100vh - 80px);
  }

  .support-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .support-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .support-icon {
    font-size: 4rem;
    display: block;
    margin-bottom: 1.5rem;
  }

  .support-header h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem;
  }

  .support-subtitle {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .support-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .contact-card {
    background: linear-gradient(145deg, rgba(26, 26, 26, 0.8), rgba(13, 13, 13, 0.9));
    border: 1px solid rgba(245, 158, 11, 0.15);
    border-radius: 16px;
    padding: 2rem;
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .contact-card:hover {
    border-color: rgba(245, 158, 11, 0.35);
    transform: translateY(-4px);
  }

  .card-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .contact-card h2 {
    font-size: 1.25rem;
    margin: 0 0 0.75rem;
  }

  .contact-card p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgba(245, 158, 11, 0.1);
    border: 1px solid rgba(245, 158, 11, 0.3);
    border-radius: 10px;
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .contact-btn:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .app-context {
    background: rgba(245, 158, 11, 0.08);
    border: 1px solid rgba(245, 158, 11, 0.2);
    border-radius: 12px;
    padding: 1rem 1.5rem;
    margin-bottom: 3rem;
    text-align: center;
  }

  .app-context p {
    margin: 0;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .app-context-icon {
    font-size: 1.5rem;
  }

  .app-context strong {
    color: var(--color-accent);
  }

  .faq-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(245, 158, 11, 0.15);
  }

  .faq-section h2 {
    font-size: 1.75rem;
    margin: 0 0 2rem;
    text-align: center;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: rgba(26, 26, 26, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
  }

  .faq-item summary {
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    font-weight: 600;
    color: var(--color-text);
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: color 0.2s;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary::after {
    content: '+';
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-accent);
    transition: transform 0.3s;
  }

  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }

  .faq-item summary:hover {
    color: var(--color-accent);
  }

  .faq-item p {
    padding: 0 1.5rem 1.25rem;
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .support-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(245, 158, 11, 0.15);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .support-page {
      padding: 2rem 1.5rem;
    }

    .support-header h1 {
      font-size: 2rem;
    }

    .contact-card {
      padding: 1.5rem;
    }
  }
</style>
